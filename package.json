{
    "name": "node-skeleton",
    "version": "1.0.0",
    "description": "Node Skeleton",
    "main": "dist/server.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/tvvignesh/node-skeleton.git"
    },
    "scripts": {
        "build": "npx tsc && npx copyfiles -u 1 src/app/**/*.html src/app/**/*.css src/app/public/**/*.* src/app/views/**/*.* dist/",
        "watch": "tsc -w -p ./",
        "debug": "npm run build && npm run lint && npx cross-env NODE_ENV=development nodemon --nolazy ./dist/server.js",
        "docker-debug": "npm run build && docker-compose up",
        "lint": "npx eslint --ext=.ts .",
        "test": "npx tsc && ava ./dist/tests",
        "document": "npx typedoc",
        "start": "node ./dist/server.js",
        "start-dev": "npm run build && npm run lint && npx cross-env NODE_ENV=development nodemon ./dist/server.js",
        "start-alpha": "npm run build && npm run lint && npx cross-env NODE_ENV=alpha node ./dist/server.js",
        "start-secure": "npm run build && npm run lint && npx cross-env NODE_ENV=secure node ./dist/server.js"
    },
    "author": "Vignesh T.V.",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.21.1",
        "body-parser": "^1.18.3",
        "chalk": "^2.4.1",
        "child_process": "^1.0.2",
        "cross-env": "^5.2.0",
        "express": "^4.16.4",
        "glob": "^7.1.3",
        "helmet": "^3.15.0",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.19",
        "method-override": "^3.0.0",
        "moment": "^2.22.2",
        "morgan": "^1.9.1",
        "mustache-express": "^1.2.8",
        "opentracing": "^0.14.3",
        "passport": "^0.4.0",
        "prom-client": "^11.2.0",
        "swagger-ui-express": "^4.0.1",
        "winston": "^3.1.0",
        "xml": "^1.0.1",
        "xss-clean": "^0.1.1",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/express": "^4.16.0",
        "@types/node": "^10.12.12",
        "acorn": "^6.0.4",
        "ava": "1.0.0-rc.1",
        "copyfiles": "^2.1.0",
        "eslint": "^5.10.0",
        "eslint-config-google": "^0.11.0",
        "eslint-plugin-typescript": "^0.12.0",
        "nodemon": "^1.18.7",
        "typedoc": "^0.13.0",
        "typescript": "^3.2.2",
        "typescript-eslint-parser": "^20.1.1"
    }
}
